<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:id="@+id/pop_up"
        android:visibility="invisible"
        >

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_marginTop="300dp">

            <LinearLayout
                android:padding="10dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/confirm_text"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Would you like to confirm check out?"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:padding="10dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerInParent = "true"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/confirmCheckButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="100dp"
                        android:text="Yes" />

                    <Button
                        android:id="@+id/cancelButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="No" />

                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>
    </LinearLayout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:id="@+id/delete_pop_up"
        android:visibility="invisible"
        >

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_marginTop="300dp">

            <LinearLayout
                android:padding="10dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/delete_text"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Are you sure that you would like to delete your account?"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:padding="10dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerInParent = "true"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/confirmDeleteButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="100dp"
                        android:text="Yes" />

                    <Button
                        android:id="@+id/cancelDeleteButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="No" />

                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/card_view_header"
        android:layout_width="match_parent"
        android:layout_marginBottom="20dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/image_view_pic"
            android:contentDescription="default profile picture"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginTop="50dp"
            android:layout_marginEnd="24dp"
            android:src="@drawable/default_pic" />

        <TextView
            android:id="@+id/text_view_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/image_view_pic"
            android:layout_toEndOf="@id/image_view_pic"
            android:fontFamily="sans-serif-medium"
            android:text=""
            android:textSize="22sp" />

        <TextView
            android:id="@+id/text_view_project_role"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/text_view_name"
            android:layout_marginTop="4dp"
            android:layout_toEndOf="@id/image_view_pic"
            android:text="Student"
            android:textSize="18sp" />
        <TextView
            android:id="@+id/textview_isdeleted"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/text_view_project_role"
            android:layout_marginTop="4dp"
            android:layout_toEndOf="@id/image_view_pic"
            android:text="Account Deleted"
            android:textColor="#ff0000"
            android:textSize="15sp"
            android:visibility="invisible"/>

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/linear_layout_profile_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp"
        android:layout_marginBottom="20dp"
        android:layout_below="@id/card_view_header"
        android:orientation="vertical">

        <TextView
            android:id="@+id/text_view_checkin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-medium"
            android:paddingBottom="14dp"
            android:text=""
            android:textColor="#5E9460"
            android:textSize="14sp" />
        <TextView
            android:id="@+id/text_view_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-medium"
            android:paddingBottom="14dp"
            android:text="Email:"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/text_view_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-medium"
            android:paddingBottom="14dp"
            android:text="" />

        <TextView
            android:id="@+id/text_view_major"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-medium"
            android:paddingBottom="14dp"
            android:text="" />
    </LinearLayout>

    <LinearLayout
        android:paddingLeft="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/linear_layout_profile_info"
        android:orientation="vertical">

        <Button
            android:id="@+id/button_checkout_profile"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="0dp"
            android:text="Check Out"
            android:textAlignment="viewStart"
            android:visibility="invisible"
            android:textColor="#5E9460"
            android:textSize="14sp" />

        <Button
            android:id="@+id/button_view_history"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="0dp"
            android:text="View History"
            android:textAlignment="viewStart"
            android:textColor="#4D98A1"
            android:textSize="14sp" />


        <Button
            android:id="@+id/button_edit_pic"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Edit Profile Picture"
            android:padding="0dp"
            android:textColor="#4D98A1"
            android:textAlignment="viewStart"
            android:textSize="14sp"
            />
        <Button
            android:id="@+id/button_edit_pic_gallery"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Profile Picture from Gallery"
            android:padding="0dp"
            android:textColor="#4D98A1"
            android:textAlignment="viewStart"
            android:textSize="14sp"
            />

        <Button
            android:id="@+id/button_change_password"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Change Password"
            android:padding="0dp"
            android:textSize="14sp"
            android:textAlignment="viewStart"
            android:textColor="#4D98A1" />

        <Button
            android:id="@+id/button_delete_account"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="viewStart"
            android:padding="0dp"
            android:textSize="14sp"
            android:textColor="#4D98A1"
            android:text="Delete Account" />


        <Button
            android:id="@+id/button_logout"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Log Out"
            android:padding="0dp"
            android:textAlignment="viewStart"
            android:textColor="#E36A6A"
            android:textSize="14sp" />

    </LinearLayout>


</RelativeLayout>